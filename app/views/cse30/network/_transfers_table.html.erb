<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transfers') %></div>
      <div class="card-body">
        <div id="latest_transfers"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`
                        query (
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                    tron{
                      transfers(options:{desc: "block.height", limit: $limit, offset: $offset},
                        date: {since: $from till: $till }
                        amount: {gt: 0}
                        ) {

                          block {
                            timestamp {
                              time (format: "%Y-%m-%d %H:%M:%S")
                            }
                            height
                          }

                          sender {
                            address
                            annotation
                          }
                          receiver {
                            address
                            annotation
                          }

                          currency {
                            address
                            symbol
                            tokenId
                            tokenType
                          }

                          amount

                          txHash

                      }
                    }
                  }`);

        new widgets.table('#latest_transfers', query, 'tron.transfers', {
            title: '<%= t('widgets.headers.latest_transfers') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'block.timestamp.time',
                    style: 'width: 170px;'
                },
                {
                    title: '<%= t('widgets.titles.block') %>',
                    type: 'string',
                    path: 'block.height',
                    urlCallbackName: 'block_path',
                    style: 'width: 80px;'
                },
                {
                    title: '<%= t('widgets.titles.sender') %>',
                    type: 'string-ellipsis',
                    path: ['sender.annotation','sender.address'],
                    urlCallbackName: 'sender_address_path'
                },
                {
                    title: '',
                    type: 'string',
                    data: '<i class="fa fa-sign-in text-success"></i>',
                    html_class: 'text-center'
                },
                {
                    title: '<%= t('widgets.titles.receiver') %>',
                    type: 'string-ellipsis',
                    path: ['receiver.annotation','receiver.address'],
                    urlCallbackName: 'receiver_address_path'
                },
                {
                    title: '<%= t('widgets.titles.amount') %>',
                    type: 'amount',
                    path: 'amount'
                },
                {
                    title: '<%= t('widgets.titles.currency') %>',
                    type: 'string',
                    path: 'currency.symbol',
                    urlCallbackName: 'token_path'
                },
                {
                    title: '<%= t('widgets.titles.hash') %>',
                    type: 'string-ellipsis',
                    path: 'txHash',
                    urlCallbackName: 'transaction_path'
                },


            ]
        });

        queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>,{
            network: '<%= params['network']['network'] %>'
        });

    });

</script>